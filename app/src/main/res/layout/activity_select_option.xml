
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#80CBC4"
    android:showDividers="middle"
    android:divider="@drawable/empty_tall_divider"
    tools:context="com.itdeve.tfidfcalculator.SelectOption">

<Button
    android:background="#00796B"
    android:id="@+id/frequncy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/IfF"
    />
    <Button
        android:background="#00796B"
        android:id="@+id/tf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="term frequency(TF)"/>
    <Button
        android:background="#00796B"
        android:id="@+id/idf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Inverse Term Frequency(IDF)"/>
    <Button
        android:background="#00796B"
        android:id="@+id/tfandidf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tf/idf"/>
    <Button
        android:background="#00796B"
        android:id="@+id/documentlength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document Length"/>
    <Button
        android:background="#00796B"
        android:id="@+id/s_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Similarity score"/>

</LinearLayout>
